{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('js/packages') }}
{% endblock %}

{% block title %}Paket-Suche{% endblock %}

{% block canonical %}{{ absolute_url(path(
    'app_packages_index',
    {
        'search': search,
        'architecture': architecture == defaultArchitecture ? null : architecture,
        'repository': repository
    }
)) }}{% endblock %}

{% block body %}
    <main role="main" class="container-fluid">
        <h1 class="mb-4">Paket-Suche</h1>
        <table id="packages" class="table table-striped table-bordered table-sm table-fixed" width="100%" cellspacing="0"
               data-ajax="{{ path('app_packages_datatables') }}"
               data-search-cols='[{"search": "{{ repository }}"}, null, {"search": "{{ architecture }}"}, null, null, null, null, null]'
               data-search='{"search": "{{ search }}"}'
               data-package-url-template="{{ path('app_packagedetails_index', {'repo': '_repository_', 'arch': '_architecture_', 'pkgname': '_package_'}) }}"
               data-repository-url-template="{{ path('app_packages_index', {'repository': '_repository_', 'architecture': architecture, 'search': search}) }}">
            <thead>
            <tr>
                <th>Repositorium</th>
                <th class="d-none">Repositorium-Architektur</th>
                <th>Architektur</th>
                <th>Name</th>
                <th>Version</th>
                <th class="w-50">Beschreibung</th>
                <th>Aktualisierung</th>
                <th class="d-none">Gruppen</th>
            </tr>
            </thead>
        </table>
    </main>
{% endblock %}
