{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('packages') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('packages') }}
{% endblock %}

{% block title %}Paket-Suche{% endblock %}

{% block canonical %}{{ absolute_url(path(
    'app_packages_index',
    {
        'search': search,
        'architecture': architecture == defaultArchitecture ? null : architecture,
        'repository': repository
    }
)) }}{% endblock %}

{% block body %}
    <main role="main" class="container-fluid">
        <h1 class="mb-4">Paket-Suche</h1>
        <table id="packages" class="table table-striped table-bordered table-sm table-fixed" width="100%"
               data-ajax-url="{{ path('app_packages_datatables') }}"
               data-search-cols='[{"search": "{{ repository }}"}, null, {"search": "{{ architecture }}"}, null, null, null, null, null]'
               data-search='{"search": "{{ search }}"}'>
            <thead>
            <tr>
                <th>Repositorium</th>
                <th class="d-none">Repositorium-Architektur</th>
                <th>Architektur</th>
                <th>Name</th>
                <th>Version</th>
                <th class="w-50">Beschreibung</th>
                <th>Aktualisierung</th>
                <th class="d-none">Gruppen</th>
            </tr>
            </thead>
            <tbody></tbody>
        </table>
    </main>
{% endblock %}
