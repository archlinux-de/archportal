<?xml version="1.0" encoding="UTF-8"?>
<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/">
    <ShortName>Paket-Suche</ShortName>
    <Description>Suche nach Arch Linux Paketen</Description>
    <Image type="image/svg+xml">{{ absolute_url(asset('build/images/archicon.svg')) }}</Image>
    <Url template="{{ url('app_packages') }}" type="text/html">
        <Param name="search" value="{searchTerms}"/>
    </Url>
    <Url template="{{ url('app_packages_suggest') }}" type="application/x-suggestions+json" rel="suggestions">
        <Param name="search" value="{searchTerms}"/>
    </Url>
    <Url template="{{ url('app_packages_opensearch') }}" type="application/opensearchdescription+xml" rel="self"/>
</OpenSearchDescription>
