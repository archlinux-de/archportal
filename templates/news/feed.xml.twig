<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <id>{{ url('app_recentnews_index') }}</id>
    <title>Aktuelle Arch Linux Neuigkeiten</title>
    <updated>{{ 'now' | date(constant('DateTimeInterface::ATOM'), timezone='GMT') }}</updated>
    <link rel="alternate" href="{{ url('app_news_index') }}"/>
    <link rel="self" href="{{ url('app_recentnews_index') }}"/>
    <icon>{{ absolute_url(asset('build/images/archicon.svg')) }}</icon>
    <logo>{{ absolute_url(asset('build/images/archicon.svg')) }}</logo>
    {# @var items \App\Entity\NewsItem[] #}
    {% for item in items %}
        <entry>
            <id>{{ item.id }}</id>
            <title>{{ item.title }}</title>
            <updated>{{ item.lastModified | date(constant('DateTimeInterface::ATOM'), timezone='GMT') }}</updated>
            <link rel="alternate" href="{{ item.link }}"/>
            <author>
                <name>{{ item.author.name }}</name>
                <uri>{{ item.author.uri }}</uri>
            </author>
            <content type="html">{{ item.description | purify('news') | escape('html') }}</content>
        </entry>
    {% endfor %}
</feed>
