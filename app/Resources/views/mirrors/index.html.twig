{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" media="screen" href="https://cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css"/>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#mirrors').DataTable({
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.15/i18n/German.json"
                },
                "lengthMenu": [25, 50, 100],
                "pageLength": 25,
                "order": [[4, "desc"]],
                "data": {{ mirrors | json_encode | raw }},
                "columns": [
                    {
                        "data": "url",
                        "render": function (data, type, row) {
                            return '<a href="' + row.url + '" rel="nofollow">' + data + '</a>';
                        }
                    },
                    {
                        "data": "country"
                    },
                    {
                        "data": "durationAvg",
                        "searchable": false
                    },
                    {
                        "data": "delay",
                        "searchable": false
                    },
                    {
                        "data": "lastsync",
                        "searchable": false,
                        "render": function (data, type, row) {
                            if (data) {
                                return new Date(data * 1000).toLocaleString('de-DE');
                            } else {
                                return '';
                            }
                        }
                    }
                ]
            });
        });
    </script>
{% endblock %}

{% block title %}Mirror-Status{% endblock %}

{% block body %}
    <div class="box">
        <h2>Mirror-Status</h2>
        <table id="mirrors" class="pretty-table compact">
            <thead>
            <tr>
                <th>URL</th>
                <th>Land</th>
                <th>&empty;&nbsp;Antwortzeit</th>
                <th>&empty;&nbsp;Verz√∂gerung</th>
                <th>Letzte Aktualisierung</th>
            </tr>
            </thead>
        </table>
    </div>
{% endblock %}
