{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" media="screen" href="{{ asset('build/packages.css') }}"/>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/packages.js') }}"></script>
{% endblock %}

{% block title %}Paket-Suche{% endblock %}

{% if search %}
    {% block canonical %}{{ absolute_url(path('app_packages_index', {'search': search})) }}{% endblock %}
{% endif %}

{% block body %}
    <h2 class="mb-4">Paket-Suche</h2>
    <table id="packages" class="table table-striped table-bordered table-sm" width="100%" cellspacing="0"
           data-ajax="{{ path('app_packages_datatables') }}"
           data-search-cols='[null, {"search": "{{ default_architecture }}"}, null, null, null, null]'
           data-search='{"search": "{{ search }}"}'>
        <thead>
        <tr>
            <th>Repositorium</th>
            <th>Architektur</th>
            <th>Name</th>
            <th>Version</th>
            <th>Beschreibung</th>
            <th>Aktualisierung</th>
        </tr>
        </thead>
    </table>
{% endblock %}
