{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" media="screen" href="{{ asset('build/packages.css') }}"/>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        var ajax = '{{ path('app_packages_datatables') }}';
        var default_architecture = '{{ default_architecture }}';
        var search = {% if search %}
            '"search": {"search": "{{ search }}"'
        {% else %}null{% endif %};
    </script>
    <script src="{{ asset('build/packages.js') }}"></script>
{% endblock %}

{% block title %}Paket-Suche{% endblock %}

{% if search %}
    {% block canonical %}{{ absolute_url(path('app_packages_index', {'search': search})) }}{% endblock %}
{% endif %}

{% block body %}
    <div class="box">
        <h2>Paket-Suche</h2>
        <table id="packages" class="pretty-table compact">
            <thead>
            <tr>
                <th>Repositorium</th>
                <th>Architektur</th>
                <th>Name</th>
                <th>Version</th>
                <th>Beschreibung</th>
                <th>Letzte Aktualisierung</th>
            </tr>
            </thead>
        </table>
    </div>
{% endblock %}
